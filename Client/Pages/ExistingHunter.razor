@page "/loginHeroic"
@inject NavigationManager NavigationManager

<style>
    body {
        background-image: url('images/img4.png');
        background-size: cover;
        background-position: center;
    }

    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        gap: 15px;
        padding: 20px;
    }

        .login-container label {
            color: white;
            font-weight: bold;
        }

        .login-container input {
            width: 250px;
            padding: 8px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .login-container button, .login-container .btn {
            width: 150px;
            margin-top: 10px;
        }

    .loginTitle {
        text-align: center;
        color: gold;
        font-family: 'Pirata One', serif;
        font-weight: 700;
        font-size: 3rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        margin: 2rem 0;
    }

    @@media (max-width: 480px) {
        .loginTitle {
            font-size: 1.5rem;
        }
    }
</style>

<p class="loginTitle">Login</p>

<div class="login-container">
    <label for="username">Username</label>
    <input type="text" @bind="User.Username" class="form-control" maxlength="20" placeholder="Your name" />

    <label for="account">Account</label>
    <input type="email" @bind="User.Account" class="form-control" placeholder="example@email.com" />

    <label for="password">Password</label>
    <input type="password" @bind="User.Password" class="form-control" />

    <NavLink href="" class="btn btn-secondary">Back to Home</NavLink>
    <button type="button" class="btn btn-success" @onclick="Login">Login</button>

    <p style="color: white;"><b>@messageText</b></p>
</div>