@page "/"

<style>
    body {
        background-image: url('images/SfondoClasifications.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top center;
        background-attachment: fixed;
        background-color: black;
        min-height: 100vh;
    }

    .buttonVideo:hover img {
        transform: scale(1.02);
        box-shadow: 0 0 25px rgba(255, 215, 0, 1);
    }

    .section-title {
        text-align: center;
        color: gold;
        font-family: 'Cinzel', serif;
        font-weight: 700;
        font-size: 3rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        margin: 2rem 0;
    }

    .topClasifications {
        box-shadow: 0 0 25px rgba(255, 215, 0, 1);
        padding: 10px;
        margin: 30px auto;
        width: fit-content;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .topClasifications img {
        display: block;
        transition: transform 0.3s;
    }

    .topClasifications:hover {
        transform: scale(1.03);
        box-shadow: 0 0 40px rgba(255, 0, 0, 0.8);
    }

    .topClasifications:hover img {
        transform: scale(1.02);
    }

    .monster-number {
        text-align: center;
        color: gold;
        font-family: 'Cinzel', serif;
        font-weight: 700;
        font-size: 3rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        margin: 2rem 0;
    }

    /* DESKTOP - Grid con 4 colonne */
    .monster-gallery {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2.5rem;
        padding: 1rem;
        justify-items: center;
    }

    .monster-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 5px solid #8b0000;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.5);
        text-align: center;
        padding: 10px;
        background: rgba(26, 26, 26, 0.5);
        color: white;
        transition: transform 0.3s, box-shadow 0.3s;
        width: 100%;
    }

    .monster-card img {
        width: 100%;
        height: auto;
    }

    .monster-card p {
        font-family: 'Cinzel', serif;
        color: white;
        font-weight: bold;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 0.5rem;
        text-align: center;
    }

    /* MOBILE - Grid con 2 colonne */
    @@media (max-width: 480px) {
        body {
            background-size: cover;
        }

        .monster-gallery {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem;
            padding: 0.5rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .monster-number {
            font-size: 1.2rem;
        }

        .monster-card {
            padding: 5px;
        }

        .monster-card img {
            width: 100%;
            max-width: none;
        }

        .monster-card p {
            font-size: 0.7rem;
            margin-top: 0.25rem;
        }

        .topClasifications img {
            width: 100%;
            height: auto;
        }

        .buttonVideo img {
            max-width: 150px;
            max-height: 70px;
        }
    }
</style>

