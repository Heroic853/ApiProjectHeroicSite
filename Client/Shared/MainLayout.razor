    <img src="images/Heroic853Icon.png" width="150" height="150">
</div>


<div class="page">
    @* <div class="sidebar">
        <NavMenu />
    </div> *@
    <div class="page">
        <main>
            <button class="menu-button" @onclick="ToggleMenu">☰</button>
            <div class="content">
                @Body
            </div>

            @*  <style>
                  .menu-bottom-buttons {
                    display: flex;
                    justify-content: space-between; /* i due bottoni ai lati */
                    gap: 10px;
                    padding: 20px;
                    margin-top: auto;
                  }

